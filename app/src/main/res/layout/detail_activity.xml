<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="100px"
                android:layout_marginRight="30px"
                android:background="@drawable/radius_main"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/flower_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:fontFamily="@font/gamjaflower_regular"
                    android:textColor="@color/text_color"
                    android:textFontWeight="700"
                    android:textSize="45px" />

                <TextView
                    android:id="@+id/flower_engname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4px"
                    android:layout_marginBottom="50px"
                    android:fontFamily="@font/gamjaflower_regular"
                    android:textColor="@color/text_color"
                    android:textSize="35px" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="4px"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="100px"
                    android:background="@color/text_color" />

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="60px"
                    android:layout_marginBottom="40px"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/flower_image"
                        android:layout_width="190dp"
                        android:layout_height="164dp"
                        android:layout_gravity="center" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/flower_lang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gamjaflower_regular"
                    android:textColor="@color/text_color"
                    android:textFontWeight="600"
                    android:textSize="40px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="50px"
                    android:layout_marginBottom="40px"
                    android:background="@drawable/radius_detail"
                    android:orientation="vertical"
                    android:padding="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="50px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:text="* 설명"
                        android:textColor="@color/text_color"
                        android:textFontWeight="600"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/flower_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:textColor="@color/text_color"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="50px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:text="* 용도"
                        android:textColor="@color/text_color"
                        android:textFontWeight="600"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/flower_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:textColor="@color/text_color"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="50px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:text="* 기르는법"
                        android:textColor="@color/text_color"
                        android:textFontWeight="600"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/flower_raise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:textColor="@color/text_color"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="50px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:text="* 출처"
                        android:textColor="@color/text_color"
                        android:textFontWeight="600"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/publishOrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:layout_marginRight="30px"
                        android:layout_marginBottom="60px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:textColor="@color/text_color"
                        android:textSize="30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="30px">

                    <Button
                        android:id="@+id/buy"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="150px"
                        android:layout_height="100px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:text="buy"
                        android:textColor="#C8ADAD"
                        android:textFontWeight="800"
                        android:textSize="50px" />

                    <Button
                        android:id="@+id/add_cart"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="250px"
                        android:layout_height="100px"
                        android:fontFamily="@font/gamjaflower_regular"
                        android:text="add cart"
                        android:textColor="#C8ADAD"
                        android:textFontWeight="800"
                        android:textSize="50px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70px"
                android:layout_marginBottom="70px"
                android:gravity="center">

                <Button
                    android:id="@+id/before"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_margin="10px"
                    android:background="@drawable/button"
                    android:text="before"
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="100px"
                    android:layout_margin="10px"
                    android:background="@drawable/button"
                    android:text="after"
                    android:textColor="@color/white"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    layout="@layout/footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>