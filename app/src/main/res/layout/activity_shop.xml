<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="1550dp"
                android:layout_marginLeft="20px"
                android:layout_marginTop="150px"
                android:layout_marginRight="50px"
                android:layout_marginBottom="150px"
                android:background="@drawable/radius_main"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    android:background="@drawable/radius_list">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="20px"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/flower_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            tools:srcCompat="@tools:sample/avatars" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/flower_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10px"
                            android:fontFamily="@font/gamjaflower_regular"
                            android:gravity="center"
                            android:textSize="60px" />
                        <!--<TextView
                            android:id="@+id/flower_lang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_margin="10px"
                            android:text="당신은 미인입니다."
                            android:textSize="50px"
                            android:fontFamily="@font/gamjaflower_regular"/>-->
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/radius_list"
                    android:orientation="vertical"
                    android:padding="50px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60px"
                        android:text="주문자 정보"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="휴대전화" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="이메일" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:layout_marginBottom="60px"
                        android:text="받는 사람 정보"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름" />

                    <EditText
                        android:id="@+id/from_name"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:hint="이름을 입력해주세요"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="휴대전화" />

                    <EditText
                        android:id="@+id/from_phone"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:hint="-없이 번호만 입력해주세요"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="배송 정보" />

                    <EditText
                        android:id="@+id/post_num"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:hint="우편 번호"
                        android:textSize="30px" />

                    <EditText
                        android:id="@+id/from_address"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:hint="기본 주소"
                        android:textSize="30px" />

                    <EditText
                        android:id="@+id/from_detain_address"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:backgroundTint="@color/gray"
                        android:hint="상세 주소"
                        android:textSize="30px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100px"
                        android:text="총 결제 금액"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="620px">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="10000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text=" 원" />
                    </LinearLayout>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:text="결제 수단"
                        android:textStyle="bold" />-->

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40px"
                            android:text="무통장 입금"
                            android:textStyle="bold" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="결제 수단 선택" />


                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="627dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.tosspayments.paymentsdk.view.PaymentMethod
                                    android:id="@+id/payment_method_widget"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp" />

                                <com.tosspayments.paymentsdk.view.Agreement
                                    android:id="@+id/agreement_widget"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cta_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:padding="10dp"
                            tools:layout_editor_absoluteY="627dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/request_payment_cta"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="320dp"
                                android:layout_height="100px"
                                android:background="@drawable/button"
                                android:minHeight="56dp"
                                android:text="결제하기"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="HardcodedText" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <!--<Button
                        android:id="@+id/submit_order"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_gravity="center"
                        android:layout_marginTop="80px"
                        android:background="@drawable/button"
                        android:text="결제하기"
                        android:textColor="@color/white"
                        android:textSize="50px" />-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    layout="@layout/footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>